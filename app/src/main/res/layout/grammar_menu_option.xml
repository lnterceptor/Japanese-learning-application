<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/notSelectedColor">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startTexts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/devideTexts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topOfFirstText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spojnik と"
        app:layout_constraintTop_toBottomOf="@+id/topOfFirstText"
        app:layout_constraintStart_toStartOf="@+id/startTexts"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/grammarOptionTitle"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spojnik, jest odpowiednikiem polskiego i"
        app:layout_constraintTop_toBottomOf="@+id/devideTexts"
        app:layout_constraintStart_toStartOf="@+id/startTexts"
        android:textColor="@color/darkGrey"
        android:textSize="15sp"
        android:id="@+id/grammarOptionDescription"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>