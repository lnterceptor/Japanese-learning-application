<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    >

    <LinearLayout
        android:id="@+id/recognition_button_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/endFirstRow"
        app:layout_constraintEnd_toStartOf="@+id/endFirstCoulmn"
        app:layout_constraintStart_toStartOf="@+id/startFirstCoulmn"
        app:layout_constraintTop_toTopOf="@+id/startFirstRow"
        android:background="@color/buttonColor">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="認識"
            android:textColor="@color/white"
            android:textSize="75sp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Rozpoznawanie"
            android:textAlignment="center"

            android:textAllCaps="true"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawing_button_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/endFirstRow"
        app:layout_constraintEnd_toStartOf="@+id/endSecondCoulmn"
        app:layout_constraintStart_toStartOf="@+id/startSecondCoulmn"
        app:layout_constraintTop_toTopOf="@+id/startFirstRow"
        android:background="@color/buttonColor">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="描画"
            android:textColor="@color/white"
            android:textSize="75sp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="Rysowanie"
            android:textAllCaps="true"
            android:textColor="@color/white"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/reading_button_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/buttonColor"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/endSecondRow"
        app:layout_constraintEnd_toStartOf="@+id/endFirstCoulmn"
        app:layout_constraintStart_toStartOf="@+id/startFirstCoulmn"
        app:layout_constraintTop_toTopOf="@+id/startSecondRow">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="読む"
            android:textColor="@color/white"
            android:textSize="75sp"
            android:gravity="center"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="Czytanie"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/translation_button_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/buttonColor"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/endSecondRow"
        app:layout_constraintEnd_toStartOf="@+id/endSecondCoulmn"
        app:layout_constraintStart_toStartOf="@+id/startSecondCoulmn"
        app:layout_constraintTop_toTopOf="@+id/startSecondRow">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="翻訳"
            android:textColor="@color/white"
            android:textSize="75sp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="Tłumaczenie"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/recognition_complex_button_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/buttonColor"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/endThirdRow"
        app:layout_constraintEnd_toStartOf="@+id/endFirstCoulmn"
        app:layout_constraintStart_toStartOf="@+id/startFirstCoulmn"
        app:layout_constraintTop_toTopOf="@+id/startThirdRow">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="複雑な認識"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="Rozpoznawanie złożone"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    </LinearLayout>





    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startFirstCoulmn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endFirstCoulmn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startSecondCoulmn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endSecondCoulmn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startFirstRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endFirstRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startSecondRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endSecondRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startThirdRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endThirdRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />


</androidx.constraintlayout.widget.ConstraintLayout>
